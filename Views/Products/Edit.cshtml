@{
}

@model ProductsModel

<form asp-controller="Products" asp-action="Save" method="post" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ID" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ID" class="form-control" value="@Model.ID" readonly="readonly" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="col-md-2 control-label">Тип продукта</label>
        <div class="col-md-10">
            <input asp-for="Type" class="form-control" value="@Model.Type" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label">Название продукта</label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label">Описание продукта</label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" value="@Model.Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-md-2 control-label">Цена</label>
        <div class="col-md-10">
            <input asp-for="Price" class="form-control" value="@Model.Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Count" class="col-md-2 control-label">Остаток на складе</label>
        <div class="col-md-10">
            <input asp-for="Count" class="form-control" value="@Model.Count" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="VendorID" class="col-md-2 control-label">Производитель</label>
        <div class="col-md-10">
            <input asp-for="VendorID" class="form-control" value="@Model.VendorID" />
            <span asp-validation-for="VendorID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID" class="col-md-2 control-label">Категория товара</label>
        <div class="col-md-10">
            <input asp-for="CategoryID" class="form-control" value="@Model.CategoryID" />
            <span asp-validation-for="CategoryID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CountriesID" class="col-md-2 control-label">Страна производства</label>
        <div class="col-md-10">
            <input asp-for="CountriesID" class="form-control" value="@Model.CountriesID" />
            <span asp-validation-for="CountriesID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-success mt-2" type="submit">Сохранить</button>
        </div>
    </div>
</form>
