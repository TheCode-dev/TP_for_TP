@{
}

@model List<CatProductModel>

<a class="btn btn-success mt-2 mb-2" href="@Url.Action("Edit", "CatProduct", new { id = 0 })">Добавить категорию</a>
<table>
    <tr>
        <td>ID</td>
        <td>Тип категории</td>
        <td>Название категории</td>
        <td>Описание категории</td>
        <td></td>
        <td></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Type</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a class="btn btn-warning" href="@Url.Action("Edit", "CatProduct", new { id = @item.ID })">Редактировать</a></td>
            <td><a class="btn btn-danger mt-2" href="@Url.Action("Delete", "CatProduct", new { id = @item.ID })">Удалить</a></td>
        </tr>
    }

</table>