@{
}

@model UsersModel
<form asp-controller="Users" asp-action="Save" method="post" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ID" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ID" class="form-control" value="@Model.ID" readonly="readonly" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label">Имя пользователя</label>
        <div class="col-md-10">
            <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label">Фамилия пользователя</label>
        <div class="col-md-10">
            <input asp-for="LastName" class="form-control" value="@Model.LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="col-md-2 control-label">Пол</label>
        <div class="col-md-10">
            <input asp-for="Gender" class="form-control" value="@Model.Gender" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Birthday" class="col-md-2 control-label">Дата рождения</label>
        <div class="col-md-10">
            <input asp-for="Birthday" class="form-control" value="@Model.Birthday" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label">Статус</label>
        <div class="col-md-10">
            <input asp-for="Status" class="form-control" value="@Model.Status" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DiscontID" class="col-md-2 control-label">Процент скидки</label>
        <div class="col-md-10">
            <input asp-for="DiscontID" class="form-control" value="@Model.DiscontID" />
            <span asp-validation-for="DiscontID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Bonus" class="col-md-2 control-label">Остаток бонусов</label>
        <div class="col-md-10">
            <input asp-for="Bonus" class="form-control" value="@Model.Bonus" />
            <span asp-validation-for="Bonus" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label">Почта</label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" value="@Model.Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-md-2 control-label">Пароль</label>
        <div class="col-md-10">
            <input type="password" asp-for="Password" class="form-control" value="@Model.Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-success mt-2" type="submit">Сохранить</button>
        </div>
    </div>
</form>
